{{ form_start(form) }}
<div class="row">
    <div class="col">
    <select name="user[executor]" class="btn-block">
        <option></option>
        {% for executor in executors %}
            <option value="{{ executor.id }}">{{ executor.userName }}: {{ executor.email }}</option>
        {% endfor %}
    </select>
    </div>
</div>
<br>
<div class="form-row">
    <div class="col-2">
        <a href="{{ path('task_show', { 'id' : id_task }) }}" class="btn btn-block btn-primary">Back to task</a>
    </div>
    <div class="col-2">
    <button class="btn btn-block btn-success">{{ button_label|default('Save') }}</button>
    </div>
</div>
{{ form_end(form) }}